{
  "name": "mango-army-launcher",
  "private": true,
  "version": "0.1.4",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:1420 && electron .\"",
    "build": "vite build && electron-builder"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-updater": "6.6.2",
    "minecraft-launcher-core": "^3.2.2",
    "msmc": "^5.0.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/discord-rpc": "^4.0.10",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.0",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "electron": "39.2.7",
    "electron-builder": "26.0.12",
    "electron-is-dev": "3.0.1",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.344.0",
    "pkg": "5.8.1",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.1.2",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^4.1.18",
    "terser": "5.44.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.2",
    "wait-on": "9.0.3"
  },
  "build": {
    "appId": "com.mangoarmy.launcher",
    "productName": "Mango Army Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-renderer/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "Mango-Army",
      "repo": "MangoArmy-Launcher"
    }
  }
}